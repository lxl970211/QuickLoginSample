<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="EnergyAppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="EnergyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/list_bg</item>
        <item name="android:resizeableActivity" tools:ignore="NewApi">false</item>
        <item name="android:maxAspectRatio" tools:ignore="NewApi">2.2</item>

    </style>
    <style name="EnergyCustomFullScreen" parent="EnergyAppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="EnergyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="EnergyCTASDKWhiteWebview" parent="EnergyAppTheme">
        <item name="android:windowBackground">@color/CTASDKBackgroundColor</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>